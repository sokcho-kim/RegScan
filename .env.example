# RegScan 환경 변수

# === FDA API ===
# 무료 발급: https://open.fda.gov/apis/authentication/
FDA_API_KEY=

# === LLM API (선택) ===
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# LLM 사용 여부 (true/false)
USE_LLM=true

# === 데이터 저장 경로 ===
DATA_DIR=./data

# === 수집 설정 ===
COLLECT_DAYS_BACK=7

# === v2: AI 엔진 ===
GEMINI_API_KEY=
ENABLE_GEMINI_PARSING=false
GEMINI_MODEL=gemini-2.0-flash

ENABLE_AI_REASONING=false
REASONING_MODEL=o4-mini
ENABLE_AI_VERIFIER=false
VERIFIER_MODEL=gpt-5.2
ENABLE_AI_WRITER=false
WRITER_MODEL=gpt-5.2

# v2: 비용 제한
MAX_REASONING_CALLS_PER_DAY=50
MAX_WRITER_CALLS_PER_DAY=50

# === v2: 신규 소스 ===
ENABLE_ASTI=false
ENABLE_HEALTHKR=false
ENABLE_BIORXIV=false

# === 로깅 ===
LOG_LEVEL=INFO
